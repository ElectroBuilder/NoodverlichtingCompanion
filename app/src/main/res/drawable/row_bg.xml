<!-- res/drawable/row_bg.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- DIRECTE tikfeedback -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#332196F3"/>
        </shape>
    </item>

    <!-- BLIJVENDE highlight -->
    <item android:state_activated="true">
        <shape android:shape="rectangle">
            <solid android:color="#332196F3"/> <!-- later evt. #1F2196F3 -->
        </shape>
    </item>

    <!-- Redundantie (optioneel) -->
    <item android:state_selected="true">
        <shape android:shape="rectangle"><solid android:color="#332196F3"/></shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle"><solid android:color="#332196F3"/></shape>
    </item>

    <item><color android:color="@android:color/transparent"/></item>
</selector>