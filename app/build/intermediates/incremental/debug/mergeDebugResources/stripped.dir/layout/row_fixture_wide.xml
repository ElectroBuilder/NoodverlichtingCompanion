<!-- res/layout/row_fixture_wide.xml -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rowRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/row_bg"
    android:clickable="true"
    android:focusable="false">

    <!-- Horizontale scroller binnen de rij (zelf geen background/click) -->
    <nl.mikekemmink.noodverlichting.ui.SyncHorizontalScrollView
        android:id="@+id/hscrollRow"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:fillViewport="true"
        android:scrollbars="none"
        android:background="@android:color/transparent"
        android:clickable="false"
        android:focusable="false">

        <LinearLayout
            android:id="@+id/rowContainer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:duplicateParentState="true">

            <!-- Id -->
            <TextView
                android:id="@+id/tvinspectieid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#222222"
                android:padding="8dp"
                android:text="Inspectie-ID" />

            <!-- Nr -->
            <TextView
                android:id="@+id/tvNr"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#222"
                android:ellipsize="end"
                android:singleLine="true" />

            <!-- Verdieping -->
            <TextView
                android:id="@+id/tvVerdieping"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:textColor="#333"
                android:ellipsize="end"
                android:singleLine="true" />

            <!-- Soort -->
            <TextView
                android:id="@+id/tvSoort"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:textColor="#333"
                android:ellipsize="end"
                android:singleLine="true" />

            <!-- Merk -->
            <TextView
                android:id="@+id/tvMerk"
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:textColor="#333"
                android:ellipsize="end"
                android:singleLine="true" />

            <!-- Type -->
            <TextView
                android:id="@+id/tvType"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:textColor="#333"
                android:ellipsize="end"
                android:singleLine="true" />

            <!-- Pictogram -->
            <TextView
                android:id="@+id/tvPictogram"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:textColor="#333"
                android:ellipsize="end"
                android:singleLine="true" />

            <!-- Duurtest -->
            <TextView
                android:id="@+id/tvDuurtest"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:textColor="#333"
                android:ellipsize="end"
                android:singleLine="true" />

            <!-- Op tekening -->
            <TextView
                android:id="@+id/tvOpTekening"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:textColor="#555"
                android:ellipsize="end"
                android:singleLine="true" />

            <!-- Code -->
            <TextView
                android:id="@+id/tvCode"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:textColor="#555"
                android:ellipsize="end"
                android:singleLine="true" />

            <!-- Montagewijze -->
            <TextView
                android:id="@+id/tvMontagewijze"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:textColor="#555"
                android:ellipsize="end"
                android:singleLine="true" />

            <!-- AccuType -->
            <TextView
                android:id="@+id/tvAccuType"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:textColor="#555"
                android:ellipsize="end"
                android:singleLine="true" />

            <!-- ArtikelNr -->
            <TextView
                android:id="@+id/tvArtikelNr"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:textColor="#555"
                android:ellipsize="end"
                android:singleLine="true" />

            <!-- AccuLeeftijd -->
            <TextView
                android:id="@+id/tvAccuLeeftijd"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:textColor="#555"
                android:ellipsize="end"
                android:singleLine="true" />

            <!-- Opmerking -->
            <TextView
                android:id="@+id/tvOpmerking"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:textColor="#555"
                android:ellipsize="end"
                android:singleLine="true" />

            <!-- ATS -->
            <TextView
                android:id="@+id/tvATS"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:textColor="#555"
                android:ellipsize="end"
                android:singleLine="true" />

        </LinearLayout>
    </nl.mikekemmink.noodverlichting.ui.SyncHorizontalScrollView>
</FrameLayout>