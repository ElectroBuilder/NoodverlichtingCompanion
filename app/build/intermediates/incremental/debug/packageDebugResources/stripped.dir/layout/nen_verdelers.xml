<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="1dp"
    app:strokeWidth="1dp"
    app:strokeColor="?attr/colorOutline"
    app:cardBackgroundColor="?attr/colorSurface"
    app:contentPadding="12dp"
    android:layout_marginBottom="12dp"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="64dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Leading icon/bubble -->
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_bolt_24"
            app:tint="@android:color/white"
            android:background="?attr/colorPrimary"
            android:scaleType="centerInside"
            android:padding="8dp" />

        <!-- Titel + badges -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingEnd="8dp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kastnaam"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Badges rij -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp">

                <TextView
                    android:id="@+id/tvBadgePhotos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fotoâ€™s"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/bg_badge_photos"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvBadgeSpd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SPD"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/bg_badge_spd"
                    android:layout_marginStart="8dp"
                    android:visibility="gone" />

                <!-- NIEUW: badge 'stroom' -->
                <TextView
                    android:id="@+id/tvBadgeStroom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="stroom"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/bg_badge_current"
                    android:layout_marginStart="8dp"
                    android:visibility="gone" />

                <!-- NIEUW: badge 'Gebreken (N)' -->
                <TextView
                    android:id="@+id/tvBadgeDefects"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gebreken (0)"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textColor="?attr/colorOnError"
                    android:background="@drawable/bg_badge_defects"
                    android:layout_marginStart="8dp"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>

        <!-- Drag handle -->
        <ImageView
            android:id="@+id/ivDrag"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@string/drag_handle"
            android:src="@drawable/ic_drag_handle"
            />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>